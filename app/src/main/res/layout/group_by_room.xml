<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parent_group_by_room"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Living room"
            android:fontFamily="@font/valeraround"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:id="@+id/group_room_name"
            />
        <info.hoang8f.android.segmented.SegmentedGroup
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:sc_border_width="1dp"
            android:layout_centerVertical="true"
            app:sc_corner_radius="5dp"
            app:sc_tint_color="@color/colorPrimary"
            app:sc_checked_text_color="@android:color/white"
            android:layout_weight="0.5">
            <RadioButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:minHeight="10dp"
                android:text="ON"
                android:id="@+id/on_group"
                android:fontFamily="@font/valeraround"
                style="@style/RadioButton"
                />
            <RadioButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="OFF"
                android:fontFamily="@font/valeraround"
                android:id="@+id/off_group"
                android:minHeight="10dp"
                style="@style/RadioButton"
                />
        </info.hoang8f.android.segmented.SegmentedGroup>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:id="@+id/group_room_devices_container"
        android:layout_height="wrap_content">
        <com.itcs.aihome.ExpandableGridView
            android:layout_width="match_parent"
            android:id="@+id/gridview_group"
            android:layout_height="wrap_content">
        </com.itcs.aihome.ExpandableGridView>
    </LinearLayout>
</LinearLayout>