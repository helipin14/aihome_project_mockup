<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parent_groupitem"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_group_recently_item"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group 1"
            android:id="@+id/group_name"
            android:fontFamily="@font/hind_regular"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/valeraround"
            android:id="@+id/user_shortlist"
            android:text="@string/usershortlist"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:layout_height="match_parent">
        <com.itcs.aihome.SolidIconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:id="@+id/showqrcode"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/qrcode"
            android:layout_toLeftOf="@+id/trash"
            android:layout_marginRight="20dp"
            />
        <com.itcs.aihome.SolidIconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trash"
            android:textSize="18sp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:foreground="?android:selectableItemBackground"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:id="@+id/trash"
            />
    </RelativeLayout>
</LinearLayout>