<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parent_groupitem"
    android:orientation="horizontal"
    android:padding="15dp"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group Staff 1"
            android:id="@+id/group_name"
            android:textSize="16sp"
            android:textColor="#414141"
            android:fontFamily="@font/hind_regular"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Helipin, Ricky Andrean, Willy Lojoko ..."
            android:fontFamily="@font/valeraround"
            android:textSize="12sp"
            android:id="@+id/user_shortlist"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:layout_height="match_parent">
        <com.itcs.aihome.SolidIconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/showqrcode"
            android:text="@string/qrcode"
            android:textSize="20sp"
            android:layout_toLeftOf="@id/trash"
            android:layout_marginRight="15dp"
            android:foreground="?android:selectableItemBackground"
            />
        <com.itcs.aihome.SolidIconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:id="@+id/trash"
            android:text="@string/trash"
            android:textSize="20sp"
            />
    </RelativeLayout>
</LinearLayout>